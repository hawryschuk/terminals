{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "TS-Mocha Tests",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "args": [
                "--timeout",
                "15000",
                "--colors",
                "${workspaceFolder}/*.spec.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ts-mocha",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hello-world",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "cli",
                "--",
                "--hello-world"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
    ]
}